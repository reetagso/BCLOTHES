<div class="container pt-5">

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="text-dark nav-link active" id="received" data-bs-toggle="tab" data-bs-target="#received-tab-pane" type="button" role="tab" aria-controls="received-tab-pane" aria-selected="true">Received requests</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="text-dark nav-link" id="pending" data-bs-toggle="tab" data-bs-target="#pending-tab-pane" type="button" role="tab" aria-controls="pending-tab-pane" aria-selected="false">Pending Requests</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="text-dark nav-link" id="closed" data-bs-toggle="tab" data-bs-target="#closed-tab-pane" type="button" role="tab" aria-controls="closed-tab-pane" aria-selected="false">Closed Requests</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="text-dark nav-link" id="open" data-bs-toggle="tab" data-bs-target="#open-tab-pane" type="button" role="tab" aria-controls="open-tab-pane" aria-selected="false">Open Requests</button>
    </li>
  </ul>
  <div class="tab-content p-2" id="myTabContent">
    <div class="tab-pane fade show active" id="received-tab-pane" role="tabpanel" aria-labelledby="received-tab" tabindex="0">
      <%= render :partial => 'received_requests',
                :locals => {request: @requests} %>
    </div>
    <div class="tab-pane fade" id="pending-tab-pane" role="tabpanel" aria-labelledby="pending-tab" tabindex="0">
        <%= render :partial => 'sent_pending_requests',
                :locals => {request: @requests} %>
    </div>
    <div class="tab-pane fade" id="closed-tab-pane" role="tabpanel" aria-labelledby="closed-tab" tabindex="0">
        <%= render :partial => 'sent_closed_requests',
                :locals => {request: @requests} %>
    </div>
    <div class="tab-pane fade" id="open-tab-pane" role="tabpanel" aria-labelledby="open-tab" tabindex="0">
      <%= render :partial => 'sent_open_requests',
                :locals => {request: @requests} %>
    </div>
  </div>
</div>
