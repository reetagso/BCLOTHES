<%# "Open" display %>

<% if @request.user_id != current_user.id && @request.status != "Closed" %>
  <%= link_to "Make a suggestion", new_request_suggestion_path(@request), class: "btn" %>
<% end %>

<%# "Closed" request display %>

<% if @request.status == "Closed" %>
<%= User.find(@request.user_id)[:first_name] %> solved her outfit dilemma
<% choice = Item.find(@request.item_id) %>
    <h2> <%= User.find(@request.user_id)[:first_name]%> went with <%=User.find(choice.user_id)[:first_name]%>'s choice </h2>
    <div class="item-card">
    <%= User.find(choice.user_id)[:first_name]%>'s choice
    <%= cl_image_tag choice.photos.first.key, height: 300, width: 400, crop: :fill %>
    <%= choice.category %>
    <%= choice.size %>
    <%= link_to "View", item_path(choice), class: "btn" %>
<% end %>

<% console %>

<%# Suggestions display %>

<% if @request.suggestions.length > 0 %>
  <h2>Suggestions</h2>

  <ol>
    <% @request.items.each do |item| %>
      <li>
      <%= User.find(item.user_id)[:first_name]%>'s choice
      <%= cl_image_tag item.photos.first.key, height: 300, width: 400, crop: :fill %>
      <%= item.category %>
      <%= item.size %>
      <%= link_to "View", item_path(item), class: "btn" %>
      </li>
    <% end %>
  </ol>

<% end %>

