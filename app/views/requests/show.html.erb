<%# request owner%>
<% elsif @request.status == "Item Requested" && User.find(Item.find(@request.item_id).user_id).id == current_user.id %>
  <div>
    <%= User.find(@request.user_id)[:first_name]%> has sent you a BClothes request for:
    <%= cl_image_tag Item.find(@request.item_id).photos.first.key, height: 300, width: 400, crop: :fill %>
    <%= Item.find(@request.item_id).category %>
    <%= Item.find(@request.item_id).size%>
  </div>
  <%= link_to "View", item_path(Item.find(@request.item_id)), class: "btn" %>
  <%= link_to "Edit Request", edit_request_path(@request), class: "btn" %>

<%# visitor%>
<% else %>
  <div>
    <%= User.find(@request.user_id)[:first_name]%> sent a BClothes request for:
    <%= cl_image_tag Item.find(@request.item_id).photos.first.key, height: 300, width: 400, crop: :fill %>
    <%= Item.find(@request.item_id).category %>
    <%= Item.find(@request.item_id).size%>
  </div>
  <%= link_to "View", item_path(Item.find(@request.item_id)), class: "btn" %>
  <%= link_to "Make another suggestion", new_request_suggestion_path(@request), class: "btn" %>
<% end %>

