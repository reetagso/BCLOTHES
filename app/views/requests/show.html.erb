

<%# #Request info %>

<% if User.find(@request.user_id) == current_user %>
  Your request
<% else %>
<%= User.find(@request.user_id)[:first_name]%>'s request
<% end %>
<h3> <%= @request.title%> <br> </h3>
<%= @request.start_date%>-<%= @request.end_date%> <br>
<%= @request.description%> <br>

<%# "Item requested"  display %>

<% selected = Item.find(@request.item_id) %>
<% if @request.status == "Item Requested" && @request.user_id == current_user.id %>
  You have sent a Bclothes request to <%=User.find(selected.user_id)[:first_name]%> for:
  <%= cl_image_tag selected.photos.first.key, height: 300, width: 400, crop: :fill %>
  <%= selected.category %>
  <%=selected.size%>
  <%= link_to "View", item_path(selected), class: "btn" %>
  <%= link_to "Edit Request", edit_request_path(@request), class: "btn" %>
  <%= link_to "Cancel Request", request_path(@request), data: {turbo_method: :delete}, class: "btn"  %>
<% else @request.status == "Item Requested" && User.find(selected.user_id) == current_user %>
  <%= User.find(@request.user_id)[:first_name]%> has sent you a BClothes request for:
  <%= cl_image_tag selected.photos.first.key, height: 300, width: 400, crop: :fill %>
  <%= selected.category %>
  <%=selected.size%>
  <%= link_to "View", item_path(selected), class: "btn" %>
  <%= link_to "Edit Request", edit_request_path(@request), class: "btn" %>
<% end %>

