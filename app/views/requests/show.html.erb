<div>
  <div class="header">
    <p class="request-owner">
      <% if User.find(@request.user_id) == current_user %>
        Your request:
      <% else %>
        <%= User.find(@request.user_id)[:first_name]%>'s request
      <% end %>
    </p>
    <h3 class="request-chatbox-title"> <%= @request.title%> </h3>
    <p class="request-description"><%= @request.description%></p>
    <p><em><%= @request.start_date.strftime("%b %d, %Y")%>-<%= @request.end_date.strftime("%b %d, %Y")%></p></em>
  </div>

  <%# #Request info for everyone %>
  <div class="main-container">
    <div class="request-info-container">

  <%# "Closed" request display %><%# "Item requested"  display %>

  <%# visitor%>
  <% if @request.user_id != current_user.id && @request.status == "Open" %>
    <%= link_to "Make a suggestion", new_request_suggestion_path(@request), class: "btn btn-dark black-button" %>

  <% elsif @request.user_id == current_user.id && @request.status == "Open" %>
    <%= link_to "Cancel Request", request_path(@request), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn frame-5 frame-6"  %>
  <%# everyone%>

  </div>

  <%# visitor or everyone?%>
  <% elsif @request.status == "Closed" %>
  <%= User.find(@request.user_id)[:first_name] %> solved her outfit dilemma by going with
    <% choice = Item.find(@request.item_id) %>
    <%=User.find(choice.user_id)[:first_name]%>'s choice!
    <div>
      <%= cl_image_tag choice.photos.first.key, height: 300, width: 400, crop: :fill %>
      <%= link_to "View", item_path(choice), class: "btn frame-5" %>
    </div>

  <%# suggestion owner%>
  <%# does not work because of choice variable%>
  <% elsif @request.status == "Item Requested" && @request.user_id == current_user.id %>
    <% choice = Item.find(@request.item_id) %>
    <p>
      I've changed my mind
    </p>
    <%= link_to "Cancel Request", request_path(@request), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn"  %>
    <div>
      You have sent a Bclothes request to <%=User.find(choice.user_id)[:first_name]%> for:
      <%= cl_image_tag choice.photos.first.key, height: 300, width: 400, crop: :fill %>
      <%= choice.category %>
      <%=choice.size%>
    </div>

    <div>
      <%= link_to "View", item_path(choice), class: "btn frame-5" %>
      <%= link_to "Edit Request", edit_request_path(@request), class: "btn frame-5" %>
    </div>
    <%= link_to "Cancel Request", request_path(@request), data: {turbo_method: :delete}, class: "btn frame-5"  %>


  <%# request owner%>
  <% elsif @request.status == "Item Requested" && User.find(Item.find(@request.item_id).user_id).id == current_user.id %>
    <div>
      <%= User.find(@request.user_id)[:first_name]%> has sent you a BClothes request for:
      <%= cl_image_tag Item.find(@request.item_id).photos.first.key, height: 300, width: 400, crop: :fill %>
      <%= Item.find(@request.item_id).category %>
      <%= Item.find(@request.item_id).size%>
    </div>
    <div>
      <%= link_to "View", item_path(Item.find(@request.item_id)), class: "btn frame-5" %>
      <%= link_to "Edit Request", edit_request_path(@request), class: "btn frame -5" %>
    </div>

  <%# visitor%>
  <% else %>
    <div>
      <%= User.find(@request.user_id)[:first_name]%> sent a BClothes request for:
      <%= cl_image_tag Item.find(@request.item_id).photos.first.key, height: 300, width: 400, crop: :fill %>
      <%= Item.find(@request.item_id).category %>
      <%= Item.find(@request.item_id).size%>
    </div>
    <div>
      <%= link_to "View", item_path(Item.find(@request.item_id)), class: "btn frame-5" %>
      <%= link_to "Make another suggestion", new_request_suggestion_path(@request), class: "btn frame-5" %>
    </div>
  <% end %>

    <%# owner of requested item link to accept request %>
  <%# <% elsif @request.item_id != "" && User.find(choice.user_id) == current_user %>
    <%# <%= link_to "Edit", edit_request_path(@request), class: "btn" %>
    <%# <%= link_to "Make a suggestion", new_request_suggestion_path(@request), class: "btn" %>

  <%# "Open" display %>

  <%# Everyone %>
    <%# Suggestions display %>
    <div class="suggestions-container">
      <h3 class="request-chatbox-title">Suggestions</h3>
      <% if @request.user_id != current_user.id && @request.suggestions.empty? %>
        <p>Be the first one to suggest an outfit! </p>
      <% elsif  @request.suggestions.empty? %>
        <p>No suggestions yet</p>
      <% else %>
          <% @request.items.each do |item| %>
              <div>
                <%= User.find(item.user_id)[:first_name]%>'s choice:
                <%= item.category %>
                <%= item.size %>
              </div>
              <div>
                <%= cl_image_tag item.photos.first.key, height: 300, width: 400, crop: :fill %>
              </div>
              <div class="group-4">
                <div>
                  <%= link_to "View", item_path(item), class: "btn frame-5" %>
                </div>
                <div>
                  <%= link_to "Accept", assign_item_path(id: @request, item_id: item.id), class: "btn frame-5" %>
                </div>
              </div>
          <% end %>
      <% end %>
    </div>
  </div>
  <div class="chatroom-div">
    <h2 class="request-chatbox-title">What do you think?</h2>
    <%= render :partial => 'shared/chatroom_requests',
    :locals => {request: @request, message: @message, chatroom: @chatroom, user: @user} %>
  </div>
</div>
