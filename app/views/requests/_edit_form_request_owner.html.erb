<%= simple_form_for request, data: { controller: 'flatpickr' }, html: { class: 'form edit-form' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :start_date, as: :string, input_html: { data: { flatpickr_target: "startTime" } }  %>
  <%= f.input :end_date, as: :string, input_html: { data: { flatpickr_target: "endTime" } }   %>
  <%= f.submit submit_text, class: 'btn btn-primary btn-block', style: 'background-color: black; color: white; border-radius: 10px; border: none;' %>
<% end %>