<div class="container edit-container">
  <h1>Edit Request</h1>

  <% if @request.user == current_user %>
    <%= render :partial => 'edit_form_request_owner',
              :locals => {request: @request, submit_text: "Edit request"} %>
  <% else %>
    <%= render :partial => 'edit_form_item_owner',
              :locals => {request: @request, submit_text: "Edit request"} %>
  <% end %>
</div>

<style>
.edit-container, .edit-form {
  font-family: 'Inter', sans-serif;
  margin-top: 30px;
}

.edit-container h1 {
  font-size: 36px;
  font-weight: 600;
}

.edit-form input[type="text"], .edit-form textarea, .edit-form select {
  font-size: 18px;
  padding: 10px;
  border-radius: 10px;
  border: none;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}

.edit-form input[type="submit"] {
  background-color: black;
  color: white;
  border-radius: 10px;
  border: none;
  padding: 10px 20px;
  font-size: 18px;
  cursor: pointer;
}

.edit-form input[type="submit"]:hover {
  background-color: #333;
}
</style>
