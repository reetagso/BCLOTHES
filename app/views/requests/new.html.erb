<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="my-4">Make a new request!</h1>

      <% if params[:id] %>
        <%= render :partial => 'create_specific_form',
                  :locals => {request: @request, submit_text: "Post request"} %>
      <% else %>
        <%= render :partial => 'create_open_form',
                  :locals => {request: @request, submit_text: "Post request"} %>
      <% end %>
    </div>
  </div>
</div>

<style>

.container{
  font-family: Inter !important;
  margin-top: 30px;
  border: none;
}
.my-4{
  font-family: 'Inter', sans-serif;
  font-weight: 600;
  font-size: 36px;
}

.col-md-8.offset-md-2 {
  border: none;
}
</style>
