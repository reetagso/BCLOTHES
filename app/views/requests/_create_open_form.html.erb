<%= simple_form_for request, data: { controller: 'flatpickr' }, html: { class: 'form' } do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control' } %>
  </div>
  <%= f.hidden_field :item_id, value: params[:item_id] %>
  <div class="form-group">
    <%= f.input :start_date, as: :string, input_html: { class: 'form-control', data: { flatpickr_target: "startTime" } }  %>
  </div>
  <div class="form-group">
    <%= f.input :end_date, as: :string, input_html: { class: 'form-control', data: { flatpickr_target: "endTime" } }   %>
  </div>
  <%= f.submit submit_text, class: 'btn btn-primary btn-block', style: 'background-color: black; color: white; border-radius: 10px; border: none; margin-bottom: 30px; width: 300px;' %>
<% end %>
