


<% if @requests_received == nil %>
  <div class=" h2">
  You haven't receieved any Bclothes requests
  </div>
<% else %>
  <div class=" h5 text-lgiht">
  You have received <%=@requests_received.length%> Bclothes requests
  </div>
  <ul>
    <% @requests_received.each do |request| %>
      <li class="list-unstyled">
      <div class="container">
        <%= User.find(request.user_id)[:first_name]%> requested
      </div>
      <div class="d-flex">
        <div>
          <%= cl_image_tag Item.find(request.item_id).photos.first.key, height: 300, width: 400, crop: :fill %>
        </div>
        <div class="pl-2">
        <h6><%= request.title%></h6>
        <p><em><%= request.start_date.strftime("%B %d, %Y")%>-<%= request.end_date.strftime("%B %d, %Y")%></p></em>
        <p><%= request.description%><p>
        <p><%= request.status %></p>
        </div>
      </div>
      <div>
      <%= link_to "View Item", item_path(Item.find(request.item_id)), class: "btn"  %>
      <%= link_to "View Request", request_path(request), class: "btn" %>
      <%= link_to "Edit Request", edit_request_path(request), class: "btn" %>
      <div>
      </li>
      <% end %>
  </ul>
<% end %>

