<div class="card-container">
    <% if @items.any? %>

        <% @items.each do |item| %>

          <%= link_to item_path(item) do %>

              <div class="cards-suggestion">
                <div class="shadow m-3">
                  <div class="<%= 'your-item' if User.find(item.user_id) == current_user %>">
                    <div class="card-title d-flex justify-content-between pt-3 ps-3 ">
                      <div>
                        <%= User.find(item.user_id)[:first_name]%>'s wardrobe
                      </div>
                    </div>
                    <%= link_to item_path(item) do %>
                      <%= cl_image_tag(item.photos.first.key, height: 400, width: 300, crop: :pad, background: "auto" ) %>
                    <% end %>
                    <div class="d-flex justify-content-between p-3">
                      <div class="">
                        <%= item.category %>
                      </div>
                      <div class="text-muted ">
                        (Size <%=item.size%>)
                      </div>
                    </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <em>Sorry, no items found, would you like to make a request?</em>
      <% end %>
    </div>
</div>

<style>

.card-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.card {
  position: relative;
  width: 320px;
  height: 600px;
  margin-bottom: 30px;
  border: none;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
  cursor: pointer;
}

.card-image {
  position: relative;
  height: 70%;
}

.card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-body {
  padding-top: 50px;
  display: flex;
  justify-content: center;
  background-color: #fff;
  width: 100%;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  border-radius: 0 0 5px 5px;
}

.card:hover .card-body {
  background-color: #f2f2f2;
}

.card-title {
  margin-top: 10px;
  font-size: 20px;
  font-weight: bold;
  text-align: center;
}

.card-subtitle {
  margin: 10px;
  font-size: 16px;
  font-weight: normal;
  text-align: center;
}

.card-text {
  font-size: 14px;
  font-weight: normal;
  text-align: center;
}

.card-subtitle a:hover {
  text-decoration: none; /* Added to remove underline when hovered */
}

.card.your-wardrobe .card-body {
  background-color: #FFF2CC;
}

.card-container:after {
  content: "";
  flex: flex;
}

.your-item {
  background-color: #FFF2CC;
}

a {
  color: black;
  text-decoration: none;
}

a:hover{
  color: #c39d56;
  text-decoration: none !important;
}

</style>
