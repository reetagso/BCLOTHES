
<div class="cards">
      <% if @items.any? %>
        <% @items.each do |item| %>
          <div>
              <div class="clothing-card-main shadow">
                <div class="group-3">
                  <div class="">
                    <h4 class="name">
                      <%= item.colour%>
                      <%= item.category%>
                    </h4>
                  </div>
                  <div class="frame-4" style="text-decoration: none;">
                    <button class="button"><%= link_to "View", item_path(item), {:style=>'color:#FFFFFF;'} %></button>
                  </div>
                  </div>
                <div>
                  <%= cl_image_tag item.photos.first.key, height: 356, width: 270, crop: :pad, background: "auto"  %>
                </div>
                <div class="group-2">
                  <h3 class="subheader">
                    <div>
                      <% if User.find(item.user_id) == current_user %>
                        <strong> Your wardrobe </strong>
                      <% else%>
                        <%= User.find(item.user_id)[:first_name]%>'s wardrobe
                      <% end %>
                    </div>
                  </h3>
                  <p class="size"><%= "Size #{item.size}" %></p>
                </div>
              </div>
          </div>
        <% end %>
      <% else %>
        <em>Sorry, no items found, would you like to make a request?</em>
      <% end %>
</div>


