<div class="card-container">
  <% if @items.any? %>
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
        <div class="card <%= 'your-wardrobe' if User.find(item.user_id) == current_user %>">
          <div class="card-image">
            <%= cl_image_tag item.photos.first.key, height: 356, width: 270, crop: :pad, background: "auto" %>
            <% if User.find(item.user_id) == current_user %>
              <div class="owned-icon">
                <i class="fa-sharp fa-solid fa-person-dress"></i>
              </div>
            <% end %>
          </div>
          <div class="card-body">
            <div class="card-text">
              <h4 class="card-title">
                <%= item.colour %> <%= item.category %> (<%= "Size #{item.size}" %>)
              </h4>
              <h3 class="card-subtitle">
                <% if User.find(item.user_id) == current_user %>
                  <strong> From your wardrobe </strong>
                <% else%>
                  <%= User.find(item.user_id)[:first_name]%>'s wardrobe
                <% end %>
              </h3>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <em>Sorry, no items found, would you like to make a request?</em>
  <% end %>
</div>


<style>
.card-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.card {
  position: relative;
  width: 320px;
  height: 600px;
  margin-bottom: 30px;
  border: none;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
  cursor: pointer;
}

.card-image {
  position: relative;
  height: 70%;
}

.card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.owned-icon {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}


.card-body {
  padding-top: 50px;
  display: flex;
  justify-content: center;
  background-color: #fff;
  width: 100%;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  border-radius: 0 0 5px 5px;
}

.card:hover .card-body {
  background-color: #f2f2f2;
}

.card-title {
  margin-top: 10px;
  font-size: 20px;
  font-weight: bold;
  text-align: center;
}

.card-subtitle {
  margin: 10px;
  font-size:16px;
font-weight: normal;
text-align: center;
}

.card-text {
font-size: 14px;
font-weight: normal;
text-align: center;
}

.card-subtitle a:hover {
text-decoration: none; /* Added to remove underline when hovered */
}

.card.your-wardrobe .card-body {
background-color: #FFF2CC;
}

.card-container:after {
content: "";
flex: flex;
}

a {
color: inherit;
text-decoration: none;
}
</style>
