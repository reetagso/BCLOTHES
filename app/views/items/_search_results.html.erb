<div class="card-container">
  <% if @items.any? %>
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
        <div class="card <%= 'your-wardrobe' if User.find(item.user_id) == current_user %>">
          <div class="card-image">
            <%= cl_image_tag item.photos.first.key, height: 356, width: 270, crop: :pad, background: "auto" %>
          </div>
          <div class="card-body">
            <div class="card-text">
              <h4 class="card-title">
                <%= item.colour %> <%= item.category %> (<%= "Size #{item.size}" %>)
              </h4>
              <h3 class="card-subtitle">
                <% if User.find(item.user_id) == current_user %>
                  <strong> From your wardrobe </strong>
                <% else%>
                  <%= User.find(item.user_id)[:first_name]%>'s wardrobe
                <% end %>
              </h3>
            </div>
            <div class="card-button-container">
              <button class="card-button">View</button>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <em>Sorry, no items found, would you like to make a request?</em>
  <% end %>
</div>


<style>
.card-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.card {
  position: relative;
  width: 320px;
  height: 600px;
  margin-bottom: 20px;
  border: none;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
}

.card-image {
  position: relative;
  height: 70%;
}

.card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-button-container {
  display: none;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 20%;
  text-align: center;
}

.card:hover .card-button-container {
  display: block;
}

.card-button {
  display: inline-block;
  color: black;
  background: #e9e2e2;
  border-radius: 5px;
  padding: 10px 5px;
  text-align: center;
  width: 250px;
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  cursor: pointer;
  transition: background-color 0.2s ease;

}

.card-button:hover {
  background-color: #c39d56;
  color: #fff;
  text-decoration: none;
}

.card-button a {
  text-decoration: none; /* Add this line to remove underline */
}

.card-button:hover a {
  text-decoration: none;
  border-bottom: none;
}

.card-body {
  display: flex;
  justify-content: center;
  background-color: #fff;
  padding: 20px;
  width: 100%;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  border-radius: 0 0 5px 5px;
}

.card-title {
  margin-top: 10px;
  font-size: 20px;
  font-weight: bold;
  text-align: center;
}

.card-subtitle {
  margin: 10px 0;
  font-size: 16px;
  font-weight: normal;
  text-align: center;
}

.card-text {
  font-size: 14px;
  font-weight: normal;
  text-align: center;
}

.card.your-wardrobe .card-body {
  background-color: #FFF2CC;
}

.card-container:after {
  content: "";
  flex: flex;
}

a {
  color: inherit;
  text-decoration: none;
}


</style>
