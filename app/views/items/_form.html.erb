<%# input form for creating (new) or editing an item %>

<%= simple_form_for(item) do |f| %>
  <%= f.input :size %>
  <%= f.input :colour %>
  <%= f.input :occasion %>
  <%= f.input :category %>
  <%= f.input :brand %>
  <%= f.input :condition %>
  <%= f.input :description, as: :text %>
  <%= f.input :photos, as: :file, input_html: { multiple: true }, wrapper_html: { class: 'form-inputs' } %>
  <%= f.submit 'New item' %>
<% end %>
