<%# input form for creating (new) or editing an item %>
<div style="padding: 23px 120px;background-color: #F4F4F4;border: 1px black dashed;margin: 42px; font-size: 20px;">
  <%= simple_form_for(item) do |f| %>

    <%= f.input :category,
        as: :radio_buttons,
        collection_wrapper_tag: 'div',
        collection_wrapper_class: 'category-wrapper',
        item_wrapper_class: 'category-item',
        input_html: {class: 'category-selector'},
        collection: Item::CATEGORIES %>

    <%= f.input :colour,
        as: :radio_buttons,
        collection_wrapper_tag: 'div',
        collection_wrapper_class: 'colour-wrapper',
        item_wrapper_class: 'colour-item',
        input_html: {class: 'colour-selector'},
        collection: Item::COLOURS %>

    <%= f.input :occasion,
        as: :radio_buttons,
        collection_wrapper_tag: 'div',
        collection_wrapper_class: 'occasion-wrapper',
        item_wrapper_class: 'occasion-item',
        input_html: {class: 'occasion-selector'},
        collection: Item::OCCASIONS %>

    <%= f.input :condition,
      as: :radio_buttons,
      collection_wrapper_tag: 'div',
      collection_wrapper_class: 'condition-wrapper',
      item_wrapper_class: 'condition-item',
      input_html: {class: 'condition-selector'},
      collection: Item::CONDITIONS %>

    <div class="container" style="padding:  0px;">

      <div class="row">
        <div class="col">
            <%= f.input :brand %>
        </div>
        <div class="col">
            <%= f.input :size %>
        </div>
      </div>
    </div>

    <%= f.input :description, as: :text %>

    <%= f.input :photos, as: :file, input_html: { multiple: true } %>

    <div class="occasion-wrapper">
      <%= f.submit submit_text, class: "item-btn", role: "button" %>
    </div>

  <% end %>
</div>


