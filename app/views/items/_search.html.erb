<div class="container">
  <div>
    <div class="cards">
          <% if @items.any? %>
            <% @items.each do |item| %>
              <div>
                  <div class="clothing-card-main">
                    <div class="group-3">
                      <div class="">
                        <h4 class="name">
                          <%= item.colour%>
                          <%= item.category%>
                        </h4>
                      </div>
                      <div class="frame-4" style="text-decoration: none;">
                        <button class="button"><%= link_to "View", item_path(item), {:style=>'color:#FFFFFF;'} %></button>
                      </div>
                      </div>
                    <div>
                      <%= cl_image_tag item.photos.first.key, crop: :fill, style: "max-width: 263px; max-height: 356px;" %>
                    </div>
                    <div class="group-2">
                      <h3 class="subheader">
                        <div>
                          <% if User.find(item.user_id) == current_user %>
                            <strong> From your wardrobe </strong>
                          <% else%>
                            From <%= User.find(item.user_id)[:first_name]%>'s wardrobe
                          <% end %>
                        </div>
                      </h3>
                      <p class="size"><%= "Size #{item.size}" %></p>
                    </div>
                  </div>
              </div>
            <% end %>
          <% else %>
            <em>Sorry, no items found, would you like to make a request?</em>
          <% end %>
    </div>
  </div>
</div>

<style>
/* CSS */
.button-56 {
  align-items: center;
  background-color: #F38181;
  border: 2px solid #111;
  border-radius: 8px;
  box-sizing: border-box;
  color: #111;
  cursor: pointer;
  display: flex;
  font-family: Inter,sans-serif;
  font-size: 16px;
  height: 48px;
  justify-content: center;
  line-height: 24px;
  max-width: 100%;
  padding: 0 25px;
  position: relative;
  text-align: center;
  text-decoration: none;
  user-select: none;
  -webkit-user-select: none;
  touch-action: manipulation;
}

.button-56:after {
  background-color: #111;
  border-radius: 8px;
  content: "";
  display: block;
  height: 48px;
  left: 0;
  width: 100%;
  position: absolute;
  top: -2px;
  transform: translate(8px, 8px);
  transition: transform .2s ease-out;
  z-index: -1;
}

.button-56:hover:after {
  transform: translate(0, 0);
}

.button-56:active {
  background-color: #F38181;
  outline: 0;
}

.button-56:hover {
  outline: 0;
}

@media (min-width: 768px) {
