<div class="container">
  <div class="row">
    <div class="col-md-6 h5 clothing-card-main shadow rounded">
      <div class="h3 pt-2 text-center">
        <% if User.find(@item.user_id) == current_user %>
          From your wardrobe
        <% else %>
          From <%= User.find(@item.user_id)[:first_name]%>'s wardrobe
        <% end %>
      </div>
      <div>
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="padding: 30px;">
          <div class="carousel-inner">
            <% additional_classes = ["active"] %>
            <% @item.photos.each do |photo| %>
              <div class="carousel-item <%= additional_classes.pop %>">
                <p class="d-flex justify-content-center"> <%= cl_image_tag(photo.key, height: 600, width: 500, crop: :pad, background: "auto" )%></p>
              </div>
              <%# <%= link_to 'Remove image', delete_image_attachment_item_path(photo.id),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
          <div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <i class="fas fa-arrow-left" aria-hidden="true"></i>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <i class="fas fa-arrow-right" aria-hidden="true"></i>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      </div>

    </div>

    <div class="col-md-6">
      <div class="pl-4 pt-4">
        <div>
          <%= image_tag User.find(@item.user_id).photo.key ? User.find(@item.user_id).photo.url : "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          Emma says:
          <div class="">
            <br><p><em>"<%= @item.description%>"</p></em>
          </div>
        </div>
        <table class="table">
          <tbody>
            <tr>
              <th scope="row">Category</th>
              <td><%= @item.category%></td>
            </tr>
            <tr>
              <th scope="row">Size</th>
              <td><%= @item.size%></td>
            </tr>
            <tr>
              <th scope="row">Colour</th>
              <td><%= @item.colour%></td>
            </tr>
            <tr>
              <th scope="row">Occasion</th>
              <td><%= @item.occasion%></td>
            </tr>
            <tr>
              <th scope="row">Brand</th>
              <td><%= @item.brand%></td>
            </tr>
            <tr>
              <th scope="row">Condition</th>
              <td><%= @item.condition%></td>
            </tr>
          </tbody>
        </table>
        <div>
          <% if @item.user_id != current_user.id %>
            <br>
            <h3>Is this what you're looking for?</h3>
            <div>
              Tr√©s chic! <%= link_to "Request #{User.find(@item.user_id)[:first_name]}'s #{@item.category}", new_item_requests_path(item_id: @item), class: "text-decoration-none" %>
            </div>
            <div>
              Not quite <%= link_to "Return to search", items_path, class: "text-decoration-none" %>
            </div>
          <% elsif @requests.count < 1 %>
            <%= link_to "Remove", item_path(@item), data: {turbo_method: :delete}, class: "item-btn"  %>
            <%= link_to "Edit", edit_item_path(@item), class: "item-btn" %>
            <%= link_to "Return to search", items_path, class: "text-decoration-none item-btn" %>
          <% else %>
            <%= link_to "Archive", archive_item_path(@item), class: "item-btn" %>
            <%= link_to "View your requests", requests_path, class: "item-btn" %>
            <%= link_to "Edit", edit_item_path(@item), class: "item-btn" %>
            <%= link_to "Return to search", items_path, class: "text-decoration-none item-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>

*{
  font: Inter;
}

.clothing-card-main {
    box-sizing: border-box;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    gap: 10px;
    min-width: 303px;
    max-height: height: 420px;
    background: #F8F7F7;
    border-radius: 5px;
}

.btn {
  background-color: black;
  color: white;
  border-radius: 10px;
  height: 60px;
}


.item-btn {
  display: inline-block;
  background-color: black;
  color: white;
  border-radius: 10px;
  padding: 10px 20px;
  margin-right: 10px;
  margin-top: 20px;
  text-align: center;
  width: 300px;
}

.btn:hover {
  background-color: yellow;
  color: #fff;
}

.carousel-item{
    float:none;
    transition: 0.15s !important;
}
</style>
