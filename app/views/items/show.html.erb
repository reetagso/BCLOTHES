<%# Code to check seed and view working %>

<div>

  <div>
    <h3>Is this what you were looking for?</h3>
    <div>
      <p>Not quite, </p>
      <%= link_to "return to search", items_path, class: "btn" %>
    </div>

  </div>

  <% if User.find(@item.user_id) == current_user %>
    From your wardrobe
  <% else%>
    From <%= User.find(@item.user_id)[:first_name]%>'s wardrobe
  <% end %>
  <% @item.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <%# <%= link_to 'Remove image', delete_image_attachment_item_path(photo.id),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
  <% end %>
  <%= @item.category%> <br>
  <%= @item.size%> <br>
  <%= @item.description%> <br>
</div>
<div>
  <%= @item.colour%> <br>
  <%= @item.occasion%> <br>
  <%= @item.brand%> <br>
  <%= @item.condition%> <br>
</div>

<% if @item.user_id != current_user.id %>
  <%= link_to "Request #{User.find(@item.user_id)[:first_name]}'s #{@item.category}", new_request_path, class: "btn" %>
<% elsif @requests.count < 1 %>
  <%= link_to "Remove", item_path(@item), data: {turbo_method: :delete}, class: "btn"  %>
  <%= link_to "Edit", edit_item_path(@item), class: "btn" %>
<% else %>
  <p> Cannot be deleted requests attached (add archive button?) </p>
  <%= link_to "View your requests", requests_path, class: "btn" %>
  <%= link_to "Edit", edit_item_path(@item), class: "btn" %>
<% end %>

