<div class="my-container" style="margin-top: 25px;">
  <div class="row" style="margin-top: 25px;">
    <div class="col-md-8 offset-md-2" style="margin-top: 30px;">
      <h1 style="font-size: 32px; margin-top: 25px;">New suggestion for <%= @request.title %></h1>
      <%= simple_form_for [@request, @suggestion], html: { class: "form" } do |f| %>
        <%= f.input :item_id , as: :select, collection: @items, label_method: :description, label: false, include_blank: false, prompt: "Please select an item in the list", input_html: { class: "form-control", style: "margin-top: 25px;" } %>
        <%= f.submit "Make suggestion", class: 'btn btn-primary btn-block', style: "margin-top: 25px;" %>
      <% end %>
    </div>
  </div>
</div>


<style>
.my-container {
  margin-top: 30px;
  flex-direction: column;
  align-items: center;
}

.col-md-8.offset-md-2 {
  border: none;
}

.form-control {
  width: 100%;
  height: 40px;
  padding: 6px 12px;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.5;
  color: #495057;
  background-color: #fff;
  border: 1px solid #ced4da;
  border-radius: 0.25rem;
  transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.item-btn {
  display: inline-block;
  color: black;
  background: #e9e2e2;
  border-radius: 5px;
  padding: 10px 5px;
  text-align: center;
  width: 250px;
}

.item-btn:hover {
  background-color: #c39d56;
  color: #fff;
  text-decoration: none;
}

.btn.btn-primary.btn-block {
  display: inline-block;
  color: black;
  background: #e9e2e2;
  border-radius: 5px;
  padding: 10px 5px;
  text-align: center;
  width: 250px;
  border: none;
}

.btn.btn-primary.btn-block:hover {
  background-color: #c39d56;
  color: #fff;
  text-decoration: none;
}

</style>
