<%# Add search? %>

<div class="request-list">
  <% @requests.each do |request| %>
    <div class="request-item">
      <% if current_user == User.find(request.user_id) %>
        <div class="bg-warning bg-gradient request-owner">
          You requested
        </div>
      <% else %>
        <div class="request-user">
          <%= image_tag current_user.photo.key ? current_user.photo.url : "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <span class="request-user-name"><%= User.find(request.user_id)[:first_name].upcase %> REQUESTED |</span><span> <span class="request-title"><%= request.title %></span>
        </div>
      <% end %>
      <div class="request-details">
        <div class="request-duration">
          <p><%= request.start_date %> - <%= request.end_date %></p>
        </div>
        <div class="request-description">
          <p><%= request.description %></p>
        </div>
        <div class="request-status">
          <p><strong>Status:</strong> <%= request.status %></p>
        </div>
        <div class="request-view">
          <%= link_to "View", request_path(request), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
  .request-list {
    display: flex;
    flex-direction: column;
  }

  .request-title {
    font-size: 20px;
  }

  .request-item {
    display: flex;
    background-color: #f7f7f7;
    padding: 1rem;
    border-radius: 0.25rem;
    margin-top: 15px;
  }

  .request-owner {
    color: #fff;
    font-weight: bold;
    padding: 0.5rem;
    border-radius: 0.25rem;
  }

  .request-user {
    display: flex;
    align-items: center;
    font-weight: bold;
    gap: 1rem;
  }

  .request-user-name {
    font-size: 1.5rem;
    text-transform: uppercase;
  }

  .request-details h3 {
    margin: 0;
  }

  .request-duration p,
  .request-description p,
  .request-status p {
    margin: 0.5rem 0;
    font-size: 1.2rem;
  }

  .request-description p {
    margin-bottom: 1rem;
  }

  .btn {
    background-color: black;
    color: white;
    border: none;
    border-radius: 10px;
    padding: 0.5rem 1rem;
    text-decoration: none;
    cursor: pointer;
    width: 200px;
  }

  .btn:hover {
    background-color: #333;
  }

  .avatar {
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    object-fit: cover;
  }
</style>
