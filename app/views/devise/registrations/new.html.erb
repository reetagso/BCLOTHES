<div class="container-all">
  <div class="left-container">
    <header>
      <h1 class="brand-name" style="font-family: Satisfy, sans-serif; font-size: 80px; font-weight: 400; color: #F38181;">Bclothes</h1>
    </header>
    <div class="form-container-wrapper">
      <div class="form-container" style="padding: 10px;">
        <h2>Sign up</h2>
        <div class="register-link">
          <% if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Or log in", new_session_path(resource_name), class: "register-link" %><br />
          <% end %>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :photo %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>

          <div class="form-links">
            <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "form-links" %><br />
            <% end %>
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "form-links" %><br />
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="right-container ">
    <%= image_tag asset_path("people-2567915.png"), alt: "People", class: "people-image" %>
  </div>
</div>

